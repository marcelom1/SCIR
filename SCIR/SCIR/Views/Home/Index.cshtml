@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


@section css{
    
}

<h3 class="pb-3">Cadastro Curso</h3>
<button type="button" class="btn bg-success botao_cor btn-sm">Novo</button>
<table id="grid-basic" class="table table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th data-column-id="id" data-type="numeric">Id</th>
            <th data-column-id="sender">Nome</th>
            <th data-column-id="activo" data-formatter="checkbox-activo">Ativo</th>
            <th data-column-id="commands" data-formatter="commands" data-sortable="false">Ação</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>Análise e Desenvolvimento de Sistemas</td>
            <td></td>
        </tr>
        <tr>
            <td>2</td>
            <td>Design de Moda</td>
            <td></td>
        </tr>
        <tr>
            <td>3</td>
            <td>Processos Gerenciais</td>
            <td></td>
        </tr>
    </tbody>
</table>

@section scripts{
    <script>


              $("#grid-basic").bootgrid({
                  labels: {
                    search: "Pesquisar",
                    infos: "Mostrando {{ctx.start}} a {{ctx.end}} de {{ctx.total}} resultados",
                    all: "Tudo"
                  },
                  formatters: {
                    "commands": function(column, row)
                    {
                        return "<button type=\"button\" class=\"btn btn-icon command-edit waves-effect waves-circle\" data-row-id=\"" + row.id + "\"><span class=\"zmdi zmdi-edit\"></span></button> " +
                        "<button type=\"button\" class=\"btn btn-icon command-delete waves-effect waves-circle\" data-row-id=\"" + row.id + "\"><span class=\"zmdi zmdi-delete\"></span></button>";
                    },
                    "checkbox-activo": function(column, row)
                    {
                        return "<input type=\"checkbox\" value=\"1\" checked=\"checked\" disabled=\"disabled\">";
                    }
                  },


                });

    </script>
}
